/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.font-large-title{
  font-size: 32px;
}

.font-title{
  font-size: 24px;
}

.font-subtitle{
  font-size: 20px;
}

.font-main{
  font-size: 16px;
}

.font-comment{
  font-size: 12px;
}

.font-bold{
  font-weight: 700;
}

.color-darkblue{
  color: #0377BD;
}

.color-lightblue{
  color: #4BE4FF;
}

.color-black{
  color: #2b2b2b;
}

.color-transparent{
  opacity: 0.5;
}

.align-left{
  margin-left: 5vw;
}

.align-left-sm{
  margin-left: 3vw;
}

.align-left-lg{
  margin-left: 8vw;
}

.align-left-xl{
  margin-left: 18vw;
}

.align-left-xxl{
  margin-left: 40vw;
}

.align-right{
  margin-right: 5vw;
}

.align-top{
  margin-top: 2vh;
}

.align-top-sm{
  margin-top: 1vh;
}

.border-round{
  border-radius: 20px;
  padding: 3px 0px 3px 10px;
  background: linear-gradient(347.95deg, rgba(3, 119, 189, 0.65) 0%, rgba(75, 228, 255, 0.08) 100%);
}

.under-border{
  border: solid 1px #2b2b2b;
  width: 90vw;
  margin-left:5vw;
  margin-top: 1.5vh;
  margin-bottom: 1.5vh;
  opacity: 0.5;
}

.box-untap{
  position: absolute;
  box-shadow: 2px 4px 4px rgba(0, 0, 0, 0.25);
  border-radius: 10px;
}

.box-normal{
  position: absolute;
  box-shadow: 2px 4px 4px rgba(0, 0, 0, 0.25);
  border-radius: 10px;
}

.box-normal:active{
  background-color: #eeeeee;
  box-shadow: 0px 14px 14px rgba(0, 0, 0, 0.25);
  transform: translateY(1vw);
}

.box-white{
  background-color: #ffffff;
}

.box-blue{
  background-color: #0377BD;
}

.box-black{
  background-color: #2b2b2b;
}

.navi-bar{
  width: 100vw;
  height: 12vh;
  display: flex;
}

.box-w80{
  width: 80vw;
}

.box-w90{
  width: 90vw;
}

.box-w40{
  width: 43vw;
}

.img-50{
  width: 50px;
  height: 50px;
}

.img-80{
  width: 80px;
  height: 80px;
}

.img-60{
  width: 60px;
  height: 60px;
}

.img-40{
  width: 40px;
  height: 40px;
}

.round{
  border-radius: 50%;
}

.arrow {
  border: solid #2b2b2b;
  border-width: 0 3px 3px 0;
  display: inline-block;
  padding: 3px;
  width: 0.8vh;
  height: 0.8vh;
  margin-left: 5vw;
  margin-top: 8vh;
}

.left {
  transform: rotate(135deg);
  -webkit-transform: rotate(135deg);
}

.btn-normal{
  width: 36vw;
  height: 6vh;
  background: linear-gradient(347.95deg, rgba(3, 119, 189, 0.65) 0%, rgba(75, 228, 255, 0.08) 100%);
  border-radius: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #2b2b2b;
  box-shadow: 2px 4px 4px rgba(0, 0, 0, 0.25);
}

.btn-normal:active{
  background-color: #eeeeee;
  box-shadow: 0px 14px 14px rgba(0, 0, 0, 0.25);
  transform: translateY(1vw);
}

page {
  background: linear-gradient(347.95deg, rgba(3, 119, 189, 0.65) 0%, rgba(75, 228, 255, 0.08) 100%);
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}